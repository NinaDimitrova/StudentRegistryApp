pipline
{
    agent any
    
   
    stages
    {
        stage("Checkout")
        {
            steps
            {
                git branch: 'main', url: 'https://github.com/NinaDimitrova/StudentRegistryApp'
            }
        }
        stage("nstalling dependencies")
        {
            steps
            {
                script
                {
                    bat 'npm install'
                }
            }
        }
        stage("Starting App and run tests")
        {
            steps
            {
                script
                {
                    bat 'start /b npm start'
                    bat 'wait on http://localhost:8080/students'
                    bat 'npm test'
                }
            }
        }
        
    }
    post
    {
        always
        {
            echo "Completed"
        }
    }

}   